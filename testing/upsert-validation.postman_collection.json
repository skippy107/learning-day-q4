{
	"info": {
		"_postman_id": "d8a5314a-9b5a-4b62-aec5-e9efc37fb666",
		"name": "upsert-validation",
		"description": "This group of requests will verify that related data is correctly changed after an *UPSERT* operation.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Verify Character",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "41ce71c1-11d0-4dc4-b638-c9abacfcd993",
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "33406dc9-394f-4f27-bf10-0d88d79cb4d5",
						"exec": [
							"pm.test(\"Verify request response code\", function () {",
							"    pm.expect(pm.response.code).to.eql(200);",
							"});",
							"",
							"pm.test(\"Retrieve matching data\", function (){",
							"    // these would have been set by a previous PUT",
							"    let id = pm.environment.get(\"id\");",
							"    let nickname = pm.environment.get(\"nickname\");",
							"    ",
							"    let jsonData = pm.response.json();",
							"    pm.expect(jsonData[0].char_id).to.eql(id);",
							"    pm.expect(jsonData[0].nickname).to.eql(nickname);",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURL}}{{path}}{{id}}",
					"host": [
						"{{baseURL}}{{path}}{{id}}"
					]
				},
				"description": "This request verifies that the character table has been updated."
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}